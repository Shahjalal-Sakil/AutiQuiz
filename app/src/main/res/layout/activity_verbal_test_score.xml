<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerbalTestScoreActivity">

    <TextView
        android:id="@+id/verbalTestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Ready for ASD Test!!!"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textStyle="normal|bold"
        android:background="@drawable/result_view"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"/>
    <ImageView
        android:id="@+id/vImageView"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_below="@id/verbalTestScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/space2" />

    <Button
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/vImageView"
        android:layout_marginTop="10dp"
        android:text="Play"
        android:textColor="#FFF"
        android:background="@drawable/round_btn"/>


</RelativeLayout>