<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ASDTestResultActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:id="@+id/progressBar"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultStatus"
        android:layout_below="@id/progressBar"
        android:background="@drawable/result_view"
        android:textStyle="bold|normal"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"/>
    <ImageView
        android:id="@+id/aImageView"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_below="@id/resultStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/space3" />
    <Button
        android:id="@+id/treatmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/aImageView"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/option_view"
        android:padding="8dp"
        android:text="TREATMENT"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ASDTestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultStatus"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="ASD Test Result in Progress....!!!"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textStyle="normal|bold"
        android:gravity="center"
        />

</RelativeLayout>