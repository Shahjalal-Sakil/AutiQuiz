<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CognitiveQuizActivity">


    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textStyle="normal|bold"
        android:background="@drawable/text_back"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_below="@id/questionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/choice1View"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/questionImageView"
        android:layout_marginStart="70dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/choice2View"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/questionImageView"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <ImageView
        android:id="@+id/choice3View"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/choice1View"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <ImageView
        android:id="@+id/choice4View"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/choice2View"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>